#include "bcm63268.dtsi"

/ {
	model = "Pace V5471";
	compatible = "pace,v5471", "brcm,bcm63168", "brcm,bcm63268";

	aliases {
		led-boot = &led_power_green;
		led-failsafe = &led_power_red;
		led-running = &led_power_green;
		led-upgrade = &led_power_green;
	};

	keys {
		compatible = "gpio-keys-polled";
		poll-interval = <100>;

		reset {
			label = "reset";
			gpios = <&gpio 32 GPIO_ACTIVE_LOW>;
			linux,code = <KEY_RESTART>;
			debounce-interval = <60>;
		};

		wps {
			label = "wps";
			gpios = <&gpio 33 GPIO_ACTIVE_LOW>;
			linux,code = <KEY_WPS_BUTTON>;
			debounce-interval = <60>;
		};
	};
};

&ehci {
	status = "okay";
};

&ethernet {
	status = "okay";

	nvmem-cells = <&macaddr_cferom_6a0>;
	nvmem-cell-names = "mac-address";
};

&leds {
	status = "okay";
	brcm,serial-leds;
	brcm,serial-dat-low;
	brcm,serial-shift-inv;
	brcm,serial-mux;

	pinctrl-names = "default";
	pinctrl-0 = <&pinctrl_leds &pinctrl_serial_led>;

	led_power_green: led@0 {
		active-low;
		function = LED_FUNCTION_POWER;
		color = <LED_COLOR_ID_GREEN>;
		label = "power:green";
	};
	led_power_red: led@1 {
		active-low;
		function = LED_FUNCTION_POWER;
		color = <LED_COLOR_ID_RED>;
		label = "power:red";
	};

	led@2 {
		active-low;
		color = <LED_COLOR_ID_GREEN>;
		label = "dsl:green";
	};

	led@3 {
		active-low;
		color = <LED_COLOR_ID_GREEN>;
		label = "internet:green";
	};

	led@4 {
		active-low;
		color = <LED_COLOR_ID_GREEN>;
		label = "hpna:green";
	};

	led@5 {
		active-low;
		color = <LED_COLOR_ID_GREEN>;
		label = "hpna_quality:green";
	};
	led@6 {
		active-low;
		color = <LED_COLOR_ID_RED>;
		label = "hpna_quality:red";
	};
	led@7 {
		active-low;
		color = <LED_COLOR_ID_ORANGE>;
		label = "hpna_quality:orange";
	};

	led@8 {
		active-low;
		color = <LED_COLOR_ID_GREEN>;
		label = "tv:green";
	};

	led@9 {
		active-low;
		color = <LED_COLOR_ID_GREEN>;
		label = "wifi:green";
	};
	led@10 {
		active-low;
		color = <LED_COLOR_ID_RED>;
		label = "wifi:red";
	};

	led@11 {
		active-low;
		color = <LED_COLOR_ID_RED>;
		label = "phone1:green";
	};
	led@12 {
		active-low;
		color = <LED_COLOR_ID_RED>;
		label = "phone2:green";
	};
};

&mdio_ext {
	switch@1e {
		compatible = "brcm,bcm53125";
		reg = <0x1e>;
		dsa,member = <1 0>;

		ports {
			#address-cells = <1>;
			#size-cells = <0>;
			port@1 {
				reg = <1>;
				label = "lan4";
			};
			port@2 {
				reg = <2>;
				label = "lan3";
			};
			port@3 {
				reg = <3>;
				label = "lan2";
			};
			port@4 {
				reg = <4>;
				label = "lan1";
			};
			port@8 {
				reg = <8>;
				phy-mode = "rgmii";
				ethernet = <&switch0port4>;
				fixed-link {
					speed = <1000>;
					full-duplex;
					asym-pause;
					pause;
				};
			};
		};
	};
};

&nflash {
	status = "okay";
	nandcs@0 {
		compatible = "brcm,nandcs";
		reg = <0>;
		nand-ecc-step-size = <512>;
		nand-ecc-strength = <15>;
		nand-on-flash-bbt;
		brcm,nand-oob-sector-size = <64>;
		partitions {
			compatible = "fixed-partitions";
			#address-cells = <1>;
			#size-cells = <1>;

			partition@0 {// Loader
				label = "CFE";// Common name for Broadcom bootloader partition
				reg = <0x0000000 0x0200000>;// 2MB
				read-only;
				// Define nvmem layout for MAC address within CFE partition
				// Using standard offset from Sagem DTS, verify if needed
				nvmem-layout {
					compatible = "fixed-layout";
					#address-cells = ;
					#size-cells = ;
					macaddr_cferom_6a0: macaddr@6a0 {
						reg = <0x6a0 0x6>;// MAC address at offset 0x6a0
					};
				};
			};
			partition@200000 {// Nvram
				label = "nvram";
				reg = <0x0200000 0x0200000>;// 2MB
			};
			partition@400000 {// Firmware -> OpenWrt firmware (Kernel + RootFS)
				label = "firmware";
				compatible = "brcm,bcm63xx-imagetag";// Assume CFE needs Broadcom tags
				reg = <0x0400000 0x2000000>;// 32MB
			};
			partition@2400000 {// OldFirmware -> Read-only placeholder
				label = "alt_firmware";
				reg = <0x2400000 0x2000000>;// 32MB
				read-only;
			};
			partition@4400000 {// Nvlog -> Read-only placeholder
				label = "nvlog";
				reg = <0x4400000 0x0800000>;// 8MB
				read-only;
			};
			partition@4c00000 {// Extra_5 -> UBI partition for overlay
				label = "ubi";// Suggests UBI usage
				reg = <0x4c00000 0x3380000>;// 51.5MB
			};
		};
	};
};

&spi0 {
  status = "okay";
}
&spi1 {
  status = "okay";
}

&ohci {
	status = "okay";
};

&pcie {
	status = "okay";
};

&pinctrl {
	pinctrl_leds: leds {
		function = "led";
		pins = "gpio8", "gpio9", "gpio15", "gpio20";
	};
};

&switch0 {
	dsa,member = <0 0>;
	ports {
		port@3 {
			reg = <3>;
			label = "wan";
			phy-handle = <&phy4>;
		};
		switch0port4: port@4 {
			reg = <4>;
			label = "extsw";
			phy-mode = "rgmii";
			fixed-link {
				speed = <1000>;
				full-duplex;
			};
		};
	};
};

&uart0 {
	status = "okay";
};

&usbh {
	status = "okay";
};
